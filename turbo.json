{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "cache": false
    },
    "compile": {
      "dependsOn": ["^compile"],
      "outputs": ["artifacts/**", "typechain-types/**"]
    },
    "test": {
      "dependsOn": ["compile"]
    },
    "deploy": {
      "dependsOn": ["compile"]
    },
    "deploy:celo-sepolia": {
      "dependsOn": ["compile"]
    },
    "deploy:celo": {
      "dependsOn": ["compile"]
    }
  }
}